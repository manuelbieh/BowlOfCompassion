{{pagemeta meta.mission}}

{{> _topbar}}


<div class="content">
{{#with mission}}

	<div class="wrapper minigrid">

		<div class="row">

			<div class="col w12">
				<h1>{{headline}}</h1>
			</div>

			<div class="col w8">
				{{#each paragraphs}}
				<p>{{{.}}}</p>
				{{/each}}
			</div>

			<div class="col w4 phone-4">
				{{#each img}}
				<div class="col
					{{#compare size "half"}}w6 phone-2{{/compare}}
					{{#compare size "full"}}w12{{/compare}}">
					<img src="{{src}}">
				</div>
				{{/each}}
			</div>

		</div>


		<div class="row">

			<div class="col w12">
				<h2>{{block-01.headline}}</h2>
			</div>

			<div class="col w8">
				{{#each block-01.paragraphs}}
				<p>{{{.}}}</p>
				{{/each}}
			</div>

			<div class="col w4 phone-4">
				{{#each block-01.img}}
				<div class="col
					{{#compare size "half"}}w6 phone-2{{/compare}}
					{{#compare size "full"}}w12{{/compare}}">
					<img src="{{src}}">
				</div>
				{{/each}}
			</div>

		</div>


		<div class="row">

			<div class="col w12">
				<h2>{{block-02.headline}}</h2>
			</div>

			<div class="col w8">
				{{#each block-02.paragraphs}}
				<p>{{{.}}}</p>
				{{/each}}
			</div>

			<div class="col w4 phone-4">
				{{#each block-02.img}}
				<div class="col
					{{#compare size "half"}}w6 phone-2{{/compare}}
					{{#compare size "full"}}w12{{/compare}}">
					<img src="{{src}}">
				</div>
				{{/each}}
			</div>

		</div>


		<div class="row">

			<div class="col w12">
				<h2>{{block-03.headline}}</h2>
			</div>

			<div class="col w8">
				{{#each block-03.paragraphs}}
				<p>{{{.}}}</p>
				{{/each}}
			</div>

			<div class="col w4 phone-4">
				{{#each block-03.img}}
				<div class="col
					{{#compare size "half"}}w6 phone-2{{/compare}}
					{{#compare size "full"}}w12{{/compare}}">
					<img src="{{src}}">
				</div>
				{{/each}}
			</div>

		</div>

	</div>

{{/with}}
