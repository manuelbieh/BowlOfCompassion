	<header id="topbar">

		<div class="wrapper">

			<nav>

				<a href="./" id="mobile-logo"></a>

				<button id="toggle-nav" class="phone-only">
					<span></span>
				</button>

				<ul>

					<li class="m-lang">
						{{#if pagemeta.link-en}}<a href="{{pagemeta.link-en}}"><img src="../img/icons/flag-usa.png" alt="Switch to english" hreflang="en" class="flag"></a>{{/if}}
