					</li>

				{{#each menu.items}}

					<li class="{{#if active}}active {{/if}}{{class}}"{{#if id}} id="{{id}}"{{/if}}>
						<{{#if href}}a href="{{href}}"{{else}}span{{/if}}>{{text}}</{{#if href}}a{{else}}span{{/if}}>
					{{#if items}}
						<ul>
							{{#each items}}
								<li class="{{#if active}} active{{/if}}"><a href="{{href}}">{{text}}</a></li>
							{{/each}}
						</ul>
					{{/if}}
					</li>

				{{/each}}
				</ul>

			</nav>

		</div>

